{% set profileLink = authorId|profileLinkByUserId %}
<div class="content-author">
    <h3>{{ __f('By %user', {'%user': profileLink})|raw }}</h3>
    <p class="avatar">{{ userAvatar(authorId, {rating: 'g'}) }}</p>
    {% if currentUser.loggedIn %}
        {% set sendMessageUrl = authorId|messageSendLink(urlOnly=true) %}
        {% if sendMessageUrl != '#' %}
            <a href="{{ sendMessageUrl }}" title="{{ __f('Send private message to %userName%', {'%userName%': author.uname}) }}"><i class="fa fa-envelope-o"></i></a>
        {% endif %}
    {% endif %}
</div>
