{% if pages|length > 0 %}
<ul>
    {% for page in pages if page.active and page.inMenu and hasPermission('ZikulaContentModule:Page:', page.id ~ '::', 'ACCESS_READ') %}
        <li>
            <a href="{{ path('zikulacontentmodule_page_display', {slug: page.slug}) }}" title="{{ page.title|e('html_attr') }}">{{ page.title }}</a>
            {{ include('@ZikulaContentModule/Page/sitemapInclude.html.twig', {pages: page.children}) }}
        </li>
    {% endfor %}
</ul>
{% endif %}
