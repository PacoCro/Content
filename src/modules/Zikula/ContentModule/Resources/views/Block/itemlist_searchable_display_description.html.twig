{# Purpose of this template: Display searchables within an external context #}
<dl>
    {% for searchable in items %}
        <dt>{{ searchable|zikulacontentmodule_formattedTitle }}</dt>
        {% if searchable.searchText %}
            <dd>{{ searchable.searchText|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
